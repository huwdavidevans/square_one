<h3>DEVELOPMENT</h3><div class="piechart left">	<canvas id="timePie-<%= project.id %>" width="46" height="46"></canvas>	<script type="text/javascript" charset="utf-8">		$(function(){ drawTotalTimePie("timePie-<%= project.id %>",<%= project.work_percent_spent %>) } );	</script></div><div class="rundown left">	<div class="collection">		<p>			<span class="standout <%= project.overrun ? "over" : "under" %>"> <%= project.work_days_spent.round %> </span>			<%= 'day'.pluralize if project.work_days_spent > 1 %> out of <span class="standout  total"><%= project.work_days %></span>		</p>		<p>			<% if project.overrun %> <span class="over"><span class="standout"><%= project.work_days_left.round.abs %></span> <%= 'day'.pluralize %> over</span>			<% else %> <span class="under"><span class="standout"><%= project.work_days_left.round.abs %></span> <%= 'day'.pluralize %> left</span>			<% end %>		</p>	</div></div><div class="clear"></div>