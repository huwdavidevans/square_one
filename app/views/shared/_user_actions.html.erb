<div class="login_summary user_bar">
	<div class="left">
		<p>
			Logged in as
		</p>
		<p>
			<%= link_to current_user.name, current_user%>
		</p>
	</div>	<div class="avatar left">
		<%= avatar_link_to_profile(current_user) %>
	</div>
	<div class="clear"></div>
</div>
<div id="logout" class="user_bar">
  <%= link_to("log out", :controller => 'access', :action=>'logout') if session[:user_id]  %>
</div>
