<div class="timepoint  <%= my_class %>">
	
<div class="activity <%= type %>" id="<%= type %>-<%=item.id%>">
	
	<div class="avatar left">
		<%= image_tag item.user.avatar.url(:thumb) %>
		<div class="icon">
			<%= image_tag "#{type}.png" %>
		</div>
	</div>
	
	<div class="details left">
		
		<div class="description">			
			<%= item.user.first_name %> 
			<% if type == 'time_log' %>
			logged <span class="type"><%= item.time_string %></span>
			<% elsif type == 'comment'%>
			posted a <span class="type">comment</span>
			<%end%>
		</div>
		
		<div class="time">
			<% if item.created_at.to_date == Date.today %>
				<strong><%= distance_of_time_in_words(Time.now, item.created_at).gsub('about ','') %></strong> ago
			<% elsif %>
				at <strong><%= item.created_at.strftime("%H:%M")%></strong>
			<% end %>
			</span>
		</div>
		
		<div class="body">
			<%= item.body %>
		</div>
		
		<div class="actions hidden">
			<%= link_to "reply", new_comment_path %>
		</div>
		
		
	</div>
	
	<% if type == 'comment' && !item.replies.empty? %>
			<div class="replies">
				<% item.replies.each do |reply| %>
					<hr />
					
					<div class="left">
						<%= image_tag reply.user.avatar.url(:teeny) %>						
					</div>
					<div class="time">
						<%= reply.user.name %> replied 
						<% if reply.created_at.to_date == Date.today %>
							<%= distance_of_time_in_words(Time.now, reply.created_at).gsub('about ','') %> ago
						<% elsif %>
							at <%= reply.created_at.strftime("%H:%M on %a %d %b %Y" )%>
						<% end %>
						</span>
					</div>

					<p><%= reply.body %></p>
				<% end %>
			</div>
		<% end %>
				
</div>

	<div class="pointer">
		<%= image_tag 'timeline-point.png' %>
		<% if my_class == "right_of_line" %>
			<%= image_tag 'timeline-arrow-from-right.png', :class=>'arrow' %>
			<% else %>
			<%= image_tag 'timeline-arrow-from-left.png', :class=>'arrow' %>
		<% end %>
	</div>

</div>