<div class="new_activity">	<% if current_user == @task.user  %>	<%= link_to_function 'Log Time', 'toggleNewForm("time_log")', :class => 'button', :id=> 'new-time_log-button'  %>		<div id="new-time_log-form" class="form hidden">		<div class="right">			<%= link_to_function 'close', 'toggleNewForm("time_log")' %>		</div>		<h2>Log your time</h2>		<div class="avatar left">			<%= image_tag @task.user.avatar.url(:thumb) %>			<div class="icon">				<%= image_tag "time_log.png" %>			</div>		</div>		<div class="left">			<% @time_log = TimeLog.new(:task_id => @task.id, :user_id => @task.user.id, :time_minutes => 0 )%>			<% @comment = Comment.new %>			<%= form_for(@time_log, :url => {:controller => 'time_logs', :action => 'create', :task_id => @task.id }) do |f| %>			<%= render :partial=>'time_logs/form', :locals => {:f => f} %>			<% end -%>		</div>		<div class="clear"></div>	</div>		<% end -%>	<%= link_to_function 'Post Comment', 'toggleNewForm("comment")', :class => 'button', :id=> 'new-comment-button'  %>	<div id="new-comment-form" class="form hidden">		<div class="right">			<%= link_to_function 'close', 'toggleNewForm("comment")' %>		</div>		<h2>New comment</h2>		<div class="avatar left">			<%= image_tag @task.user.avatar.url(:thumb) %>			<div class="icon">				<%= image_tag "comment.png" %>			</div>		</div>		<div class="left">			<% @comment = Comment.new(:task_id => @task.id) %>			<%= form_for(@comment, :url => {:controller => 'comments', :action => 'create'}) do |f| %>			<%= render :partial=> 'comments/form', :locals => {:f => f} %>			<% end -%>		</div>		<div class="clear"></div>	</div></div>