<%= form_for(@comment) do |f| %>
<%= render(:partial => 'shared/form_errors', :locals => {:object => @comment})%>


<div>
	<%= f.label :user_id, "User" %> :
	<%= f.select(:user_id, @task.project.users.collect {|r| [r.name, r.id]}) %>
</div>

<div>
	<%= f.label :task_id %> : <%= @task.name %>
	<%= f.hidden_field :task_id %> 
</div>

<div>
	<%= f.text_area :body %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
