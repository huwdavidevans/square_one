<%= link_to("Back to list", {:action => 'list'})%>

<% if !flash[:notice].blank? %>
<div class="notice">
	<%= flash[:notice]%>
</div>
<%end%>

<div id="user show">
<table summary="User detail" >
	
	<tr>
		<th>Given Name</th>
		<td><%= @user.first_name %> <%= @user.last_name %></td>
	</tr>

	<tr>
		<th>UserName</th>
		<td><%= @user.username %></td>	
	</tr>
	
	<tr>
		<th>Email Address</th>
		<td><%= @user.email %></td>
	</tr>

	<tr>
		<th>Job Title</th>
		<td><%= @user.title %></td>
	</tr>
	
	<tr>
		<th>Description</th>
		<td><%= @user.description %></td>
	</tr>

	<tr>
		<th>User Level</th>
		<td><%= UserRole.find(@user.level).title %></td>
	</tr>
	
		<!-- <tr><td><%= image_tag @user.avatar.url %>	</td></tr> -->
		<tr><td><%= image_tag @user.avatar.url(:medium) %></td>	</tr>
		<tr><td><%= image_tag @user.avatar.url(:thumb) %></td>	</tr>
		<tr><td><%= @user.avatar_content_type %> </td>	</tr>
</table>
</div>