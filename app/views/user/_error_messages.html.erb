<% if object.errors && object.errors.size > 0 %>
	<div id = "errorExplanation">
	<h2><%= pluralize(object.errors.size, "Error")%> prevented this record from being saved</h2>
	<p>There Were problems with the following fields: <p>
		<ul>
			<% object.errors.full_messages.each do |e| %>
			<li><%= e %></li>
			<% end %>
		</ul>
	</div>
<% end %>