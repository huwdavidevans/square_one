<div class="fixed">
	
	<div class="left" ><%= link_to image_tag "so_toplogo.png" , :controller => :project, :action => :index%></div>
	
	<div class="right">
		<%= form_tag(:controller => 'access', :action => 'switch')  do  %>	
		<%= select(:user, :id, User.all.collect {|p| [ p.name, p.id ]}) %>
		<%= submit_tag("switch") %>
		<% end %>
	</div>
	
	<div class="right">
		<%= render :partial => 'shared/user_actions'  if session[:user_id]%>
	</div>
		
	<div class="clear"></div>
	
</div>