<%= form_for(@project, :url => {:controller => :projects, :action => :add_user, :id => @project.id}, :remote => true ) do |f| %>
	<%= render(:partial => 'shared/form_errors', :locals => {:object => @project})%>
	<%= fields_for "new_user" do |u| %>
		<%= u.select(:id, @users_available.collect {|r| ["#{r.first_name} #{r.last_name} : (#{r.username})" , r.id]}) %>
	<% end %>
	<div class="actions">
		<%= f.submit "Add User" %>
	</div>
<% end %>
