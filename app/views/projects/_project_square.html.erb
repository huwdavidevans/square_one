<div class="pSquare">
	<div class="top">
		<div class="left">
			<div class="title">
				<%= link_to project.name , project %>
			</div>
			<div class="description">
				<%= truncate(project.description, :length => 100) %>
			</div>
		</div>
		<div class="right">
			<div class="ribbon" style="background: url(<%= project.ribbonURL %>) no-repeat scroll top left;">
				<div class="deadline">
					<%= render :partial => 'shared/calendar_date', :locals => {:date => project.deadline} %>
				</div>
			</div>
		</div>
	</div>
	
	<div class="actions">
		<%= link_to 'SHOW', project %> . 
		<%= link_to 'EDIT', edit_project_path(project) %>&#09; . 
		<%= link_to 'DELETE', project, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
	
	
	<div class="details">
		
		Tasks : <span class="metric"><%= project.tasks.length %></span>
		
	</div>
	
	
	<div class="activity">
	</div>
	
	
	<div class="admin">
	</div>
	
	
		<div class="users">
			<% project.users.each do |u| %>
			<%= image_tag u.avatar.url(:tiny), :title => u.name %>
			<% end %>
		</div>
	
</div>