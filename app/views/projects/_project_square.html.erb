<div class="pSquare" id="project-<%= project.id %>">
	<div class="top">
		<div class="left">
			<div class="title">
				<%= link_to project.name , project %>
			</div>
			<div class="description">
				<%= truncate(project.description, :length => 100) %>
			</div>
		</div>
		<div class="right">
			<div class="ribbon" style="background: url(<%= project.ribbonURL %>) no-repeat scroll top left;">
				<div class="deadline">
					<%= render :partial => 'shared/calendar_date', :locals => {:date => project.deadline} %>
				</div>
			</div>
		</div>
	</div>
	
	<div class="actions">
		<ul>
			
			<li id="details_action">
				<%= link_to_function "DETAILS", "showDetails(#{project.id})" %>				
			</li>
			
			<li id="activity_action">
				<%= link_to_function "ACTIVITY", "showActivity(#{project.id})" %>
			</li>
			
			<li class="last">
				<%= link_to 'EDIT', edit_project_path(project) %>
			</li>
			
		</ul>
	</div>
	
	
	
	<div class="split hidden">		
		<div id="metrics" class="details hidden">
			<%= render :partial => 'development_metrics', :locals => {:project => project} %>
			<hr/>
			<%= render :partial => 'task_metrics', :locals => {:project => project} %>
		</div>
		
		<div id="activity" class="activity hidden">
			<div id="dev-activity" class="section">
			<%= render :partial => 'activity_feed', :locals=> {:project => project, :limit => 4}%>
			</div>
			
		</div>
		
		<div class="admin hidden"></div>
		
		<div class="split_end"></div>
	</div>
	
	
	
		<div class="users">
			<% project.users.each do |u| %>
			<%= image_tag u.avatar.url(:tiny), :title => u.name %>
			<% end %>
		</div>
	
</div>