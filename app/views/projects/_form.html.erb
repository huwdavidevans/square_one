<%= form_for(@project) do |f| %>

  <%= render(:partial => 'shared/form_errors', :locals => {:object => @project})%>



  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>


  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>


  <div class="field">
    <%= f.label :deadline %><br />
    <%= f.date_select :deadline %>
  </div>

	
  <div class="field">
  	<th>Project Type</th>
	<td><%= f.select(:project_type_id, ProjectType.all.collect {|r| [r.name, r.id]}) %></td>
  </div>



  <div class="field">
    <%= f.label :code %><br />
    <%= f.text_field :code %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>


<% end %>
